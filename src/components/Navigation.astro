---
const currentPath = Astro.url.pathname;

const navItems = [
	{ href: "/", label: "主页" },
	{ href: "/about", label: "关于" },
	{ href: "/blog", label: "博客" },
];
---

<nav class="nav">
	<div class="container nav-inner">
		<a href="/" class="nav-logo">Gakusyun</a>
		<ul class="nav-menu">
			{navItems.map((item) => (
				<li>
					<a
						href={item.href}
						class={`nav-link ${currentPath === item.href ? "active" : ""}`}
					>
						{item.label}
					</a>
				</li>
			))}
		</ul>
	</div>
</nav>
